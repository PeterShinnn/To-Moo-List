include utils.pug

append head
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")

div.checkbox-container
    div(class="checkbox-all grid-square")
        input(type="checkbox")
    div(class="task-options")
        div(class="split-3")
            div(class="completed grid-square")
                span(class="tool-tip") Complete
                i(class="fas fa-check")
            div(class="postpone grid-square drop-square")
                span(class="tool-tip") Postpone
                i(class="fas fa-calendar-plus")
                div(class="postpone-dates dropdown" style='display: none')
        div(class="split-3")
            div(class="due grid-square drop-square")
                span(class="tool-tip") Due
                i(class="fas fa-calendar-week drop-square")
                div(class="hidden-cal dropdown" style='display: none')
            div(class="moveTo grid-square drop-square")
                span(class="tool-tip") Change List
                i(class="fas fa-list-alt drop-square")
                div(class="list-of-lists dropdown" style='display: none')
            div(class="priority grid-square drop-square")
                span(class="tool-tip") Priority
                i(class="fas fa-exclamation")
                div(class="list-of-tags dropdown" style='display: none')
        div(class="delete grid-square")
            span(class="tool-tip") Delete
            i(class="fas fa-trash-alt")
+errorSummary(errors)
div#add-task-form
    form(id='add-task-input')
        //- input(type='hidden' name='_csrf' value=csrfToken id='add-task-input')
        +plainField('', 'name', name, '', 'Add a task...')
        div.add-task-button
            button(type='submit' disabled='true') Moo

div#tasksContainer
