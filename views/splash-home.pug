extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/home.css")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")

block content
    include splash-navbar.pug
    div.header-content
        h1 The legen-dairy to-do list
        div.carousel
            div(class="slide active")
                img(src="images/office-o.png", alt="" class="")
                div.carousel-info
                    h2 Tired of Deja-moo? We can help!
            div.slide
                img(src="images/wavingCow-o.png", alt="" class="")
                div.carousel-info
                    h2 Got Milk? Thanks to this site, you'll never forget again.
            div.slide
                img(src="images/moosic-o.png", alt="" class="")
                div.carousel-info
                    h2 Stop thinking about your to-dos and let the app remember for you. Cow-ABUNGA!
            div.slide
                img(src="images/cowblep-o.png", alt="" class="")
                div.carousel-info
                    h2 Prioritize your schedule with this is udderly amazing app!
            div.navigation
                i(class="fas fa-chevron-left prev-btn")
                i(class="fas fa-chevron-right next-btn")
            div.pageIndicator
                div(class="page-icon active")
                div.page-icon
                div.page-icon
                div.page-icon
    include splash-footer.pug
    script(src="/javascripts/splash-page.js")
