mixin errorSummary(errors)
  if errors
    div
      p Please fix the following error(s):
      ul
        each error in errors
          li= error

mixin field(fieldText, fieldName, fieldValue, fieldType = 'text', placeholder = null)
  div(class='inp-div')
    label(for= fieldName) #{fieldText}
      input(class='inp-field' type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder)
